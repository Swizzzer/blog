---
import PageLayout from '@/layouts/BaseLayout.astro'

const meta = {
  description: 'Page not found',
  title: '404 - Page Not Found'
}
---

<PageLayout {meta} highlightColor='#659EB9'>
  <div class='flex min-h-[70vh] flex-col items-center justify-center px-4 py-10 sm:px-6 lg:px-8'>
    <div class='animate flex max-w-2xl flex-col items-center gap-y-6 text-center'>
      {/* 404 Number with gradient effect */}
      <div class='relative'>
        <h1
          class='gradient-text text-8xl font-bold tracking-tight sm:text-9xl md:text-[12rem]'
        >
          404
        </h1>
        <div
          class='pointer-events-none absolute inset-0 opacity-20'
          style='background: radial-gradient(circle at 50% 50%, hsl(var(--primary) / 0.3) 0%, transparent 70%); filter: blur(40px);'
        >
        </div>
      </div>

      {/* Error Message */}
      <div class='flex flex-col gap-y-3'>
        <h2 class='text-2xl font-semibold sm:text-3xl'>Page Not Found</h2>
        <p class='text-balance text-lg text-muted-foreground'>
          Oops! The page you're looking for seems to have wandered off into the digital void.
        </p>
        <p class='text-balance text-muted-foreground'>
          Maybe it was moved, deleted, or never existed in the first place.
        </p>
      </div>

      {/* Action Buttons */}
      <div class='mt-4 flex flex-col gap-3 text-lg sm:flex-row sm:gap-4'>
        <a href='/' class='text-primary underline'>Back to Home</a>
        <a href='/blog' class='text-primary underline'>View Blog</a>
      </div>

      {/* Decorative Elements */}
      <div class='mt-8 text-sm text-muted-foreground/60'>
        <p>Error Code: 404 | Page Not Found</p>
      </div>
    </div>
  </div>

  {/* Custom styles for the page */}
  <style>
    @keyframes float {
      0%,
      100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    .gradient-text {
      background: linear-gradient(135deg, hsl(var(--primary)) 0%, hsl(var(--primary) / 0.6) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      color: transparent;
      animation: float 3s ease-in-out infinite;
    }

    /* Firefox fallback */
    @supports not (background-clip: text) {
      .gradient-text {
        color: hsl(var(--primary));
      }
    }
  </style>
</PageLayout>
